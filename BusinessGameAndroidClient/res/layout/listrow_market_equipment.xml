<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imgdesc_equipment"
        android:src="@drawable/ic_launcher"
        android:id="@+id/img"/>
    <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/img"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:textSize="18sp"
		android:id="@+id/txt_equipment"/>
    <TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/txt_equipment"
		android:layout_below="@+id/txt_equipment"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
		android:id="@+id/txt_user"/>
    <TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/txt_equipment"
		android:layout_below="@+id/txt_user"
		android:id="@+id/txt_size"/>
    <RatingBar android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/txt_size"
		android:layout_below="@+id/txt_size"
		android:numStars="3"
		android:rating="2"
		android:id="@+id/rate_quality"
		style="?android:attr/ratingBarStyleSmall"/>
    <ProgressBar android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rate_quality"
        android:layout_below="@+id/rate_quality"
	    android:id="@+id/progress_durability"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="75" />
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/btn_buy"
        android:id="@+id/btn_buy"/>
</RelativeLayout>