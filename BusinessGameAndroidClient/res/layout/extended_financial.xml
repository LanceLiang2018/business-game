<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyProfileTabActivity" >
      
    <TableLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:stretchColumns="1">
    
	    <TableRow >
	        
	        <TextView android:text="@string/sales"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        
	        <EditText android:id="@+id/txt_sales"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	        
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/raw_material"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_raw_material"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/electricity"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_electricity"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/fixed_cost"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_fixed_cost"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/wage"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_wage"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/operation"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_operation"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/transport"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_transport"
                android:background="@null"
                android:focusable="false"
