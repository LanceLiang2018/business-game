                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/retribution"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_retribution"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/advertisement"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_advertisement"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/bank_interest"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_bank_interest"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >

	        <TextView
	            android:text="@string/depreciation"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        	
	        <EditText android:id="@+id/txt_depreciation"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >

	        <TextView />
	        <TextView
	            android:layout_height="3dp"
	            android:background="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/profit_before_tax"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_profit_before_tax"
                android:background="@null"
                android:focusable="false"
                android:inputType="none"
                android:textColor="@android:color/white" />
	         
	    </TableRow>
	    
	    <TableRow >
	        
	        <TextView android:text="@string/tax"
	            android:textAppearance="?android:attr/textAppearanceMedium"/>
	        	
	        <EditText android:id="@+id/txt_tax"
